<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_login_see"
            android:layout_width="111.5dp"
            android:layout_height="112.9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/icon_eye"
            android:layout_marginTop="256.5dp"/>

        <ImageView
            android:layout_width="282dp"
            android:layout_height="116dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_login_see"
            android:background="@drawable/icon_logo"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_kakao"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/icon_kako"
                android:layout_marginRight="48dp"
                app:layout_constraintEnd_toStartOf="@id/iv_facebook"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/icon_facebook"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_kakao"/>

            <ImageView
                android:id="@+id/iv_insta"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="48dp"
                android:background="@drawable/icon_instagram"
                app:layout_constraintStart_toEndOf="@id/iv_facebook"
                app:layout_constraintTop_toTopOf="@id/iv_kakao"/>

            <EditText
                android:id="@+id/et_email"
                android:background="@drawable/login_rec"
                android:paddingLeft="36dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                android:layout_height="76dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/nanum2"
                android:hint="이메일"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_kakao"/>

            <EditText
                android:id="@+id/et_password"
                android:background="@drawable/login_rec"
                android:paddingLeft="36dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                android:layout_height="76dp"
                android:layout_marginTop="26dp"
                android:hint="비밀번호"
                android:fontFamily="@font/nanum2"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_email"/>

            <TextView
                android:id="@+id/tv_findpassword"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/et_password"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="75dp"
                android:layout_marginTop="29dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanum1"
                android:textSize="18sp"
                android:text="비밀번호 찾기"/>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/et_password"
                app:layout_constraintEnd_toStartOf="@id/tv_findpassword"
                android:layout_marginRight="60dp"
                android:layout_marginTop="29dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanum1"
                android:textSize="18sp"
                android:text="회원가입하기"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:text="로그인하기"
                android:textSize="26sp"
                android:fontFamily="@font/nanum2"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                android:layout_marginBottom="110dp"
                android:backgroundTint="#ee8155"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>

