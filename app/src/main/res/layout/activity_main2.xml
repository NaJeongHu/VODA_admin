<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@android:id/tabhost"
    tools:context=".Activity.MainActivity2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:background="#ee8155">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp">

                    <ImageView
                        android:layout_width="144dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/icon_logo2"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/Tab1"
                    android:background="@drawable/button_main2"
                    android:layout_marginLeft="24dp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_main2_1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_open"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="영업개시"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanum2"
                        android:gravity="center"
                        android:layout_marginRight="60dp"
                        android:textColor="@drawable/text_selector"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Tab2"
                    android:background="@drawable/button_main2"
                    android:layout_marginLeft="24dp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_main2_2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_menu"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="메뉴관리"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanum2"
                        android:gravity="center"
                        android:layout_marginRight="60dp"
                        android:textColor="@drawable/text_selector"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Tab3"
                    android:background="@drawable/button_main2"
                    android:layout_marginLeft="24dp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_main2_3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_customer"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="고객관리"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanum2"
                        android:gravity="center"
                        android:layout_marginRight="60dp"
                        android:textColor="@drawable/text_selector"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Tab4"
                    android:background="@drawable/button_main2"
                    android:layout_marginLeft="24dp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_main2_4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_statics"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="주문통계"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanum2"
                        android:gravity="center"
                        android:layout_marginRight="60dp"
                        android:textColor="@drawable/text_selector"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Tab5"
                    android:background="@drawable/button_main2"
                    android:layout_marginLeft="24dp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_main2_5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_setting"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="설정"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanum2"
                        android:gravity="center"
                        android:layout_marginRight="60dp"
                        android:textColor="@drawable/text_selector"/>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

</TabHost>

